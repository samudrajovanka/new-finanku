<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinanKu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/blue</item>
    </style>

    <style name="TextTitle">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/text_huge</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextTitleWhite">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/text_huge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextSecondTitle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextThirdTitle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSubtitle">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextNormal">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSmall">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:paddingBottom">@dimen/small</item>
    </style>

    <style name="ButtonSecondaryTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/blue</item>
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:paddingBottom">@dimen/small</item>
    </style>

    <style name="ButtonTextTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:paddingBottom">@dimen/small</item>
    </style>

    <style name="EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="helperTextTextColor">@color/red</item>
    </style>

    <style name="DropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="helperTextTextColor">@color/red</item>
    </style>
</resources>