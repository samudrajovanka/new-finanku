<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/very_small"
        android:src="@drawable/ic_dot_green"
        android:contentDescription="@string/dot_active"
        app:layout_constraintBottom_toBottomOf="@+id/tv_history_current_date"
        app:layout_constraintEnd_toStartOf="@+id/tv_history_current_date"
        app:layout_constraintTop_toTopOf="@+id/tv_history_current_date" />

    <TextView
        android:id="@+id/tv_history_current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_date"
        android:textAppearance="@style/TextNormal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>